extend layout

block content
  link(rel="stylesheet", href="/css/lib/jquery.mentionsInput.css")
  link(rel="stylesheet", href="/css/instructor.css")


  //- h1 Greetings, Instructor #{username}!
  div.sidebar
    div.sidebar-link.new-question.active
      a.plus(href="#")
        i.fa.fa-plus
    div.sidebar-link.question-list.inactive
      a.list(href="#")
        i.fa.fa-list
    div.sidebar-link.analytics.inactive
      a.bar-chart(href="#")
        i.fa.fa-bar-chart

  div#dashboard

  script(type="text/x-handlebars-template" id="new-question-template")
    div.col-md-6
      h1 Insert New Question
      div.new-question
        form(id='new-question-form')
          div.status
          textarea.content.mention(placeholder="Question" rows="1")
          textarea.content.mention(placeholder="Answer" rows="1")
          textarea.concept-tags.mention(placeholder="Tags" rows="1")
          div#figure-tiles
          button.btn.btn-default Preview
          button.btn.btn-default Submit
        button#Modal.btn.btn-default(type="button") Modal

        div#marvin.modal.fade(tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true")
          div.modal-dialog
            div.modal-content
              div.modal-header
                button.close(type="button" data-dismiss="modal" aria-label="Close")
                  span(aria-hidden="true")
                    &times;
                h4.modal-title#myModal Insert Structure
              div.modal-body
                div#structure-tools
                  iframe(id="sketch" src="/js/lib/marvinjs/editor.html" style="width:100%;")
                  div
                    button#insert.btn.btn-default Insert
                    button#remove.btn.btn-default Remove
                    button.btn.btn-default Cancel
                  div
    div.col-md-6





  script(type="text/x-handlebars-template" id="questions-list-template")
    h1 Questions List
    table.table.table-hover.table-bordered
      tr
        th Content
        th Concepts
        th Correct
        th Responses
      {{#each questions}}
      tr
        td {{content}}
        td {{concepts}}
        td {{numCorrect}}
        td {{numResponses}}
      {{/each}}


  script(type="text/x-handlebars-template" id="analytics-template")
    h1 Analytics

  script(type="text/x-handlebars-template" id="figure-tile-template")
    img.thumbnails.bordered(src="{{src}}" data-id="{{dataId}}")

  script(src="/js/lib/underscore.min.js")
  script(src="/js/lib/jquery.elastic.js")
  script(src="/js/lib/jquery.events.input.js")
  script(src="/js/lib/jquery.mentionsInput.js")

  script(src="/js/instructor-model.js")
  script(src="/js/structure-utils.js")
  script(src="/js/instructor-view.js")
